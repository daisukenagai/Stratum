---
import BlogOwnersInfo from './BlogOwnersInfo.astro'

const toKanjiYear = (year) => {
  const kanjiNumbers = [
    '〇',
    '一',
    '二',
    '三',
    '四',
    '五',
    '六',
    '七',
    '八',
    '九'
  ]
  return String(year)
    .split('')
    .map((num) => kanjiNumbers[num])
    .join('')
}

const currentYearKanji = toKanjiYear(new Date().getFullYear())
---

<div class='flex items-center space-x-4'>
  <BlogOwnersInfo />
  <p>© {currentYearKanji}</p>
</div>
